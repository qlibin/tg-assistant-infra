{
  "name": "tg-assistant-infrastructure",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "type-check": "tsc --noEmit",
    "lint": "eslint bin/ lib/ test/ --ext .ts",
    "lint:fix": "eslint bin/ lib/ test/ --ext .ts --fix",
    "format": "prettier --write bin/ lib/ test/",
    "format:check": "prettier --check bin/ lib/ test/",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "test": "jest --coverage",
    "validate": "npm run build && npm run lint && npm run format:check && npm run type-check && npm run test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-cdk": "^2.151.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.151.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  }
}
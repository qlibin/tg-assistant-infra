#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Root project checks
echo "🔍 Running pre-commit checks..."

# Infrastructure guardrails
if [ ! -d "infrastructure" ]; then
  echo "❌ 'infrastructure' directory not found at repo root"
  exit 1
fi

echo "🏗 Running infrastructure guardrails..."
cd infrastructure || { echo "❌ Failed to enter infrastructure directory"; exit 1; }

# Build
echo "▶ Build (infrastructure)"
npm run --silent build
if [ $? -ne 0 ]; then
  echo "❌ Build failed (infrastructure)"
  exit 1
fi

# Type-check
echo "▶ Type-check (infrastructure)"
npm run --silent type-check
if [ $? -ne 0 ]; then
  echo "❌ Type-check failed (infrastructure)"
  exit 1
fi

# Lint
echo "▶ Lint (infrastructure)"
npm run --silent lint
if [ $? -ne 0 ]; then
  echo "❌ Lint failed (infrastructure)"
  exit 1
fi

# Format check
echo "▶ Format check (infrastructure)"
npm run --silent format:check
if [ $? -ne 0 ]; then
  echo "❌ Format check failed (infrastructure)"
  exit 1
fi

# Tests
echo "▶ Tests (infrastructure)"
npm run --silent test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed (infrastructure)"
  exit 1
fi

# If everything passed
echo "✅ All pre-commit checks passed, including infrastructure guardrails!"
